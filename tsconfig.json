{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext", "ES2015.Core"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "sourceMap": true,
    "incremental": true,
    "module": "CommonJS",
    "skipLibCheck": true,
    "removeComments": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "typeRoots": [
      "src/backend/node_modules/@types",
      "src/backend/global.d.ts",
      "src/frontend/node_modules/@types"
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
  "exclude": [
    "node_modules",
    "src/backend/node_modules",
    "src/frontend/node_modules"
  ]
}
