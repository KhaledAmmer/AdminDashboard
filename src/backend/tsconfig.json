{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext", "ES2015.Core"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "sourceMap": true,
    "incremental": true,
    "module": "CommonJS",
    "skipLibCheck": true,
    "removeComments": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "baseUrl": "./",
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
  "exclude": ["node_modules"]
}
